{
  "name": "code-review-agent",
  "version": "1.0.0",
  "description": "Automated Code Review & Security Audit System",
  "main": "dist/index.js",
  "bin": {
    "code-review": "dist/cli/index.js"
  },
  "scripts": {
    "start": "node dist/cli/index.js",
    "dev": "ts-node src/cli/index.ts",
    "build": "tsc && chmod +x dist/cli/index.js",
    "watch": "tsc --watch",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "docker:build": "docker build -t code-review-agent .",
    "docker:run": "docker run -v $(pwd):/workspace code-review-agent"
  },
  "keywords": [
    "code-review",
    "security",
    "audit",
    "lighthouse",
    "static-analysis",
    "vulnerability-scanner",
    "performance",
    "seo",
    "accessibility"
  ],
  "author": "Nebras Ammar",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "axios": "^1.6.2",
    "lighthouse": "^11.4.0",
    "puppeteer": "^21.6.1",
    "chrome-launcher": "^1.1.0",
    "simple-git": "^3.21.0",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3",
    "handlebars": "^4.7.8",
    "marked": "^11.0.0",
    "puppeteer-core": "^21.6.1",
    "pdfkit": "^0.14.0",
    "officegen": "^0.6.5",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "node-fetch": "^3.3.2",
    "cheerio": "^1.0.0-rc.12",
    "js-yaml": "^4.1.0",
    "semver": "^7.5.4",
    "lodash": "^4.17.21",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "@anthropic-ai/sdk": "^0.27.0",
    "openai": "^4.20.1",
    "tree-sitter": "^0.20.4",
    "tree-sitter-javascript": "^0.20.3",
    "tree-sitter-python": "^0.20.4",
    "esprima": "^4.0.1",
    "acorn": "^8.11.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/parser": "^6.14.0",
    "jscpd": "^3.5.10",
    "retire": "^4.0.3",
    "snyk": "^1.1274.0",
    "npm-audit": "^2.1.0",
    "markdown-it": "^14.0.0",
    "chart.js": "^4.4.1",
    "chartjs-node-canvas": "^4.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/jest": "^29.5.11",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/pdfkit": "^0.13.3",
    "@types/markdown-it": "^13.0.7",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/cheerio": "^0.22.35",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{ts,js}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NibrasAmmar01/code-review-system.git"
  },
  "bugs": {
    "url": "https://github.com/NibrasAmmar01/code-review-system/issues"
  },
  "homepage": "https://github.com/NibrasAmmar01/code-review-system#readme"
}