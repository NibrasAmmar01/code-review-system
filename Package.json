{
  "name": "code-review-agent",
  "version": "1.0.0",
  "description": "Automated Code Review & Security Audit System",
  "main": "dist/index.js",
  "bin": {
    "code-review": "dist/cli/index.js"
  },
  "scripts": {
    "start": "node dist/cli/index.js",
    "dev": "ts-node src/cli/index.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "docker:build": "docker build -t code-review-agent .",
    "docker:run": "docker run -v $(pwd):/workspace code-review-agent",
    "audit": "npm audit --omit=dev"
  },
  "keywords": [
    "code-review",
    "security",
    "audit",
    "static-analysis",
    "vulnerability-scanner",
    "performance",
    "seo",
    "accessibility"
  ],
  "author": "Nebras Ammar",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "acorn": "^8.11.2",
    "axios": "^1.7.2",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0",
    "chrome-launcher": "^2.2.0",
    "commander": "^12.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "esprima": "^4.0.1",
    "express": "^4.19.2",
    "glob": "^10.4.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.19",
    "joi": "^17.12.2",
    "jscpd": "^4.0.3",
    "js-yaml": "^4.1.0",
    "lighthouse": "^11.4.0",
    "lodash": "^4.17.21",
    "marked": "^12.0.2",
    "markdown-it": "^14.1.0",
    "minimatch": "^10.0.0",
    "officegen": "^0.6.5",
    "openai": "^4.48.1",
    "ora": "^8.0.1",
    "pdfkit": "^0.15.0",
    "puppeteer": "^22.6.0",
    "semver": "^7.6.2",
    "simple-git": "^3.24.0",
    "snyk": "^1.1295.0",
    "tree-sitter": "^0.22.1",
    "tree-sitter-javascript": "^0.20.3",
    "tree-sitter-python": "^0.20.4",
    "uuid": "^10.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.10",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.14.9",
    "@types/pdfkit": "^0.13.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!src/**/*.test.{ts,js}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NibrasAmmar01/code-review-system.git"
  },
  "bugs": {
    "url": "https://github.com/NibrasAmmar01/code-review-system/issues"
  },
  "homepage": "https://github.com/NibrasAmmar01/code-review-system#readme"
}